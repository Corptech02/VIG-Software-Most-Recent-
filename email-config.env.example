# Email Configuration for Vanguard Insurance
# Copy this file to .env and fill in your actual values

# Email Provider (choose one: sendgrid, mailgun, gmail, smtp)
EMAIL_PROVIDER=sendgrid

# Default From Email
FROM_EMAIL=info@vigagency.com
FROM_NAME=Vanguard Insurance Agency

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Mailgun Configuration (if using Mailgun)
MAILGUN_USERNAME=postmaster@mg.vigagency.com
MAILGUN_PASSWORD=your_mailgun_password
MAILGUN_DOMAIN=mg.vigagency.com

# Generic SMTP Configuration (if using other SMTP)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_username
SMTP_PASS=your_password

# Email addresses for your team
EMAIL_INFO=info@vigagency.com
EMAIL_SUPPORT=support@vigagency.com
EMAIL_SALES=sales@vigagency.com
EMAIL_HUNTER=hunter@vigagency.com
EMAIL_MAUREEN=maureen@vigagency.com
EMAIL_GRANT=grant@vigagency.com

# Forwarding addresses (where emails should be forwarded to)
FORWARD_INFO=your.personal.email@gmail.com
FORWARD_SUPPORT=your.personal.email@gmail.com
FORWARD_SALES=your.personal.email@gmail.com
FORWARD_HUNTER=hunter.personal@gmail.com
FORWARD_MAUREEN=maureen.personal@gmail.com
FORWARD_GRANT=grant.personal@gmail.com